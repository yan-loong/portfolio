{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio/common": ["libs/common/src/index.ts"],
      "@portfolio/data-access": ["libs/data-access/src/index.ts"],
      "@portfolio/feature-task-management": [
        "libs/feature-task-management/src/index.ts"
      ],
      "@portfolio/ui": ["libs/ui/src/index.ts"],
      "@portfolio/util": ["libs/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
